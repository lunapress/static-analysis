{
    "name": "lunapress/static-analysis",
    "description": "Psalm, PHPCS and Rector configs for use in WP",
    "license": "Apache-2.0",
    "keywords": [
        "dev",
        "phpcs",
        "psalm",
        "rector",
        "standards",
        "static analysis",
        "WordPress",
        "LunaPress"
    ],
    "autoload": {
        "psr-4": {
            "LunaPress\\WpStaticAnalysis\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "LunaPress\\WpStaticAnalysis\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Onepix",
            "homepage": "https://onepix.net",
            "role": "Company"
        },
        {
            "name": "0zd0",
            "role": "Lead Developer",
            "homepage": "https://github.com/0zd0"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^8.3",
        "lunapress/coding-standards": "dev-main",
        "symfony/console": "^7",
        "symfony/process": "^7",
        "vimeo/psalm": "^5 || ^6",
        "humanmade/psalm-plugin-wordpress": "^3",
        "onepix/wordpress-stubs": "*",
        "rector/rector": "^2"
    },
    "require-dev": {
        "phpunit/phpunit": "^12",
        "mikey179/vfsstream": "^1.6",
        "psalm/plugin-phpunit": "^0"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "bin": [
        "bin/lunapress-static-analysis"
    ],
    "scripts": {
        "fix:cs": "phpcbf",
        "fix:psalter": "psalter --issues=all",

        "tests:unit": "phpunit -c phpunit.xml",
        "tests:integration": "phpunit -c phpunit.integration.xml",
        "tests": [
            "@tests:unit",
            "@tests:integration"
        ],

        "check:cs": "phpcs",
        "check:psalm": "psalm",
        "check:psalter": "psalter --dry-run --issues=all",
        "check": [
            "@check:cs",
            "@check:psalm",
            "@tests"
        ]
    }
}
