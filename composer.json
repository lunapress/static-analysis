{
    "name": "onepix/wp-static-analysis",
    "description": "Psalm, PHPCS and Rector configs for use in WP",
    "license": "Apache-2.0",
    "keywords": [
        "dev",
        "phpcs",
        "psalm",
        "rector",
        "standards",
        "static analysis",
        "WordPress"
    ],
    "autoload": {
        "psr-4": {
            "Onepix\\WpStaticAnalysis\\Cli\\": "Cli/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Onepix\\WpStaticAnalysis\\Tests\\": "tests/",
            "PHP_CodeSniffer\\Tests\\": "vendor/squizlabs/php_codesniffer/tests/"
        }
    },
    "authors": [
        {
            "name": "onepix"
        },
        {
            "name": "0zd0"
        }
    ],
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/onepixnet/wp-coding-standards.git"
        }
    ],
    "require": {
        "php": "^8.1",
        "onepix/wp-coding-standards": "dev-main",
        "symfony/console": "^6",
        "symfony/process": "^6"
    },
    "require-dev": {
        "phpunit/phpunit": "^10 || ^11"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "bin": [
        "bin/wp-static-analysis"
    ],
    "scripts": {
        "test:phpcs": "phpunit -c phpunit.phpcs.xml --coverage-filter OnepixStandard",
        "check": [
            "@test:phpcs"
        ]
    }
}
