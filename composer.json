{
    "name": "onepix/wp-static-analysis",
    "description": "Psalm, PHPCS and Rector configs for use in WP",
    "license": "Apache-2.0",
    "keywords": [
        "dev",
        "phpcs",
        "psalm",
        "rector",
        "standards",
        "static analysis",
        "WordPress"
    ],
    "autoload": {
        "psr-4": {
            "Onepix\\WpStaticAnalysis\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Onepix\\WpStaticAnalysis\\Tests\\": "tests/",
            "PHP_CodeSniffer\\Tests\\": "vendor/squizlabs/php_codesniffer/tests/"
        }
    },
    "authors": [
        {
            "name": "onepix"
        },
        {
            "name": "0zd0"
        }
    ],
    "require": {
        "php": "^8.1",
        "symfony/polyfill-php83": "*",
        "onepix/wp-coding-standards": "^1",
        "symfony/console": "^6",
        "symfony/process": "^6",
        "vimeo/psalm": "^6",
        "humanmade/psalm-plugin-wordpress": "^3",
        "onepix/wordpress-stubs": "*",
        "rector/rector": "^2"
    },
    "require-dev": {
        "phpunit/phpunit": "^10 || ^11",
        "mikey179/vfsstream": "^1.6",
        "psalm/plugin-phpunit": "*"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "bin": [
        "bin/wp-static-analysis"
    ],
    "scripts": {
        "fix:cs": "phpcbf",
        "fix:psalter": "psalter --issues=all",
        "check:cs": "phpcs",
        "check:psalm": "psalm",
        "check:psalter": "psalter --dry-run --issues=all",
        "check": [
            "@check:cs",
            "@check:psalm",
            "@tests"
        ],
        "tests:unit": "phpunit -c phpunit.xml",
        "tests:integration": "phpunit -c phpunit.integration.xml",
        "tests": [
            "@tests:unit",
            "@tests:integration"
        ]
    }
}
